<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:src="@mipmap/black_back"
            android:padding="7dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="设置"
            android:layout_gravity="bottom"
            android:textSize="18sp"
            android:gravity="center"/>
    </LinearLayout>

    <View style="@style/divider_horizontal"/>

    <LinearLayout
        android:id="@+id/personal_data"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/person_iocn"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="个人资料"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:src="@mipmap/right_go"
            android:layout_gravity="center"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <LinearLayout
        android:id="@+id/account_safe"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="账户安全"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:src="@mipmap/right_go"
            android:layout_gravity="center"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <LinearLayout
        android:id="@+id/info_authentication"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="信息认证"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:src="@mipmap/right_go"
            android:layout_gravity="center"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <LinearLayout
        android:id="@+id/contact_us"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="联系我们"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:src="@mipmap/right_go"
            android:layout_gravity="center"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <LinearLayout
        android:id="@+id/agreement"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="协议"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:src="@mipmap/right_go"
            android:layout_gravity="center"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

        <TextView
            android:id="@+id/exit"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="退出"
            android:background="@drawable/shape_rect_text"
            android:textSize="18sp"
            android:textColor="#D85434"
            android:gravity="center"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>