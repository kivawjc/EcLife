<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/guide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/teach"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="导游"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/home_teach"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/teach"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="家教"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/clean"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/teach"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="保洁陪护"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/maintain"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="60dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/teach"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="上门维护"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/all"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="60dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/teach"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="其他分类"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="发布人需同意"/>

        <TextView
            android:id="@+id/send_agrement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发单协议"
            android:gravity="center_vertical"
            android:textColor="@color/lightCoral"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="和"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/get_agrement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="接单协议"
            android:gravity="center_vertical"
            android:textColor="@color/lightCoral"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>


    <TextView
        android:id="@+id/cancel"
        android:layout_above="@id/tab"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="取消"
        android:gravity="center"
        android:background="@drawable/shape_ring_text"
        android:textSize="18sp"
        android:textColor="#D85434"
        android:layout_marginBottom="25dp"
        android:layout_centerInParent="true" />

</RelativeLayout>